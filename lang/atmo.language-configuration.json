{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [ [ "{", "}" ], [ "[", "]" ], [ "(", ")" ] ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'", "notIn": [ "string" ] },
        { "open": "`", "close": "`", "notIn": [ "string" ] },
        { "open": "\"", "close": "\"", "notIn": [ "string" ] },
        { "open": "/*", "close": " */", "notIn": [ "string" ] }
    ],
    "surroundingPairs": [
        [ "{", "}" ], [ "[", "]" ], [ "(", ")" ], [ "'", "'" ], [ "`", "`" ], [ "\"", "\"" ] ],
    "folding": {
        "offSide": true
    },
    "onEnterRules": [
        { "beforeText": "^\\s*\\/\\/\\/.*$", "action": { "indent": "none", "appendText": "/// " } },
    ]
}
